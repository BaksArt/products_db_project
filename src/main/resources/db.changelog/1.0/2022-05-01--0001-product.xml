<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2022-05-01--0001-product" author="baksart">
        <validCheckSum> 8:3555efa754ac58a273c0de6721b17b1a </validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="product"/>
            </not>
        </preConditions>

        <!-- Создаем таблицу -->
        <createTable tableName="product">
            <!-- Описываем колонки -->
            <column name="id"
                    type="NUMERIC(19,0)"
                    autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>

            <column name="category_id" type="NUMERIC(19,0)">
                <constraints nullable="false" foreignKeyName="fk_product_category" references="category(id)"
                             deleteCascade="true"/>
            </column>

            <column name="composition" type="VARCHAR(500)">
                <constraints nullable="false" />
            </column>


        </createTable>


    </changeSet>

</databaseChangeLog>